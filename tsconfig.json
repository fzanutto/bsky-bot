{
  "compilerOptions": {
    // Enable latest features
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "outDir": "dist",
  },
  "ts-node": { "files": true, "require": ["tsconfig-paths/register"] },
  "exclude": ["eslint.config.mjs", "commitlint.config.cjs"]
}
